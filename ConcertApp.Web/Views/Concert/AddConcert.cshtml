@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Add Concert</h3>
            </div>
            <div class="panel-body">
                <form role="form" method="post" action="@Url.Action("AddingConcert", "Concert")">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                                <input type="text" name="name" id="name" class="form-control input-sm" placeholder="Name">
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                                <input type="text" name="category" id="category" class="form-control input-sm" placeholder="Category">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="datetime" name="dateTime" id="dateTime" class="form-control input-sm" placeholder="DateTime">
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                                <input type="text" name="location" id="location" class="form-control input-sm" placeholder="Location">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" name="price" id="price" class="form-control input-sm" placeholder="Price">
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                                <input type="text" name="description" id="description" class="form-control input-sm" placeholder="Description">
                            </div>
                        </div>
                    </div>
                    <input type="submit" value="Add Concert" class="btn btn-info btn-block">

                </form>
            </div>
        </div>
    </div>
</div>
