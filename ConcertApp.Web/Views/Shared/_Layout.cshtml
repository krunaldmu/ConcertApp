<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Concert Seat Reservation Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Leicester Concert", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Register", "Register", "Account")</li>

                    @if (Session["isLoggedIn"] != null && Session["isLoggedIn"].ToString() == "True")
                    {
                        <li>@Html.ActionLink("Sign Out", "SignOut", "Account")</li>
                        <li>@Html.ActionLink("Bookings", "Index", "Bookings")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Sign In", "SignIn", "Account")</li>
                    }

                    @if (Session["isLoggedIn"] != null && Session["isAdmin"].ToString() == "True")
                    {
                        <li>@Html.ActionLink("Concerts", "Index", "Concert")</li>
                        <li>@Html.ActionLink("Users", "Index", "Account")</li>
                    }
                    @if (Session["userId"] != null)
                    {
                        <li>
                            <span class="label label-success"><span class="glyphicon glyphicon-user"></span> Hello @Session["fullname"].ToString()</span>
                        </li>
                    }
                </ul>
                <div class="col-sm-3 col-md-3 pull-right">
                    @using (Html.BeginForm("Index","Home", FormMethod.Get))
                    {
                        <font color="whitesmoke"><b>Search By:</b></font>
                        @Html.RadioButton("searchBy", "Title", true)
                        <font color="whitesmoke"><text>Title</text></font>
                        @Html.RadioButton("searchBy", "Category")
                        <font color="whitesmoke"><text>Category</text></font>
                        @*@Html.TextBox("search")*@
                        <input type="text" name="search" id="search" placeholder="Search" required="">
                        <button type="submit">
                            <span class=" glyphicon glyphicon-search"></span>
                        </button>
                    }
                </div>
             </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Concert Seat Reservation Application</p>
            <div id="google_translate_element"></div>
            <script type="text/javascript">
    function googleTranslateElementInit() {
        new google.translate.TranslateElement({
            pageLanguage: 'en',
            layout: google.translate.TranslateElement.InlineLayout.SIMPLE
        }, 'google_translate_element');
    }
            </script>
            <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>


        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
